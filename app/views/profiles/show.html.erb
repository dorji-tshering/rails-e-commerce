<% if notice %>
<div class="profile-notice alert alert-warning alert-dismissible fade show" role="alert">
  <%= notice%>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% end %>
<div class="profile">
<h1>My Profile</h1>

<p>
  <strong>Name:</strong>
  <%= @profile.first_name + ' ' + @profile.last_name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @profile.address %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @profile.phone %>
</p>

<p>
  <strong>Zip code:</strong>
  <%= @profile.zip_code %>
</p>
<div id="profile-account">
<%= link_to 'Edit', edit_profile_path(@profile), class:"btn btn-info btn-sm" %> 
<%= link_to 'Update account', edit_user_registration_path, class:"btn btn-danger btn-sm" %>
<%= link_to 'Home', root_path, class:"btn btn-sm btn-info" %>
</div>
</div>